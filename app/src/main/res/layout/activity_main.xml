<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="presdig"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/n1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:hint="0.0"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/n2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:hint="0.0"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/n1" />

    <Button
        android:id="@+id/btigu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="="
        app:layout_constraintBaseline_toBaselineOf="@+id/btp"
        app:layout_constraintEnd_toStartOf="@+id/btdiv" />

    <Button
        android:id="@+id/btdiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clicop"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/btigu"
        app:layout_constraintStart_toStartOf="@+id/btmul"
        />

    <Button
        android:id="@+id/bt0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:onClick="presdig"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bt1" />

    <Button
        android:id="@+id/btp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:onClick="presdig"
        android:text="."
        app:layout_constraintBaseline_toBaselineOf="@+id/bt0"
        app:layout_constraintEnd_toStartOf="@+id/btigu" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="presdig"
        android:text="6"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt5"
        app:layout_constraintStart_toStartOf="@+id/bt3" />

    <Button
        android:id="@+id/bt9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="presdig"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@+id/bt8"
        app:layout_constraintStart_toStartOf="@+id/bt6"
        app:layout_constraintTop_toTopOf="@+id/bt8"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="presdig"
        android:text="3"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt2"
        app:layout_constraintStart_toStartOf="@+id/btigu" />

    <Button
        android:id="@+id/bt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:onClick="presdig"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/bt4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btsum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clicop"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/bt9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bt9"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btrest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clicop"
        android:text="-"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt6"
        app:layout_constraintStart_toStartOf="@+id/btsum" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="presdig"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/bt1"
        app:layout_constraintStart_toStartOf="@+id/bt7" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="presdig"
        android:text="5"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt4"
        app:layout_constraintStart_toStartOf="@+id/bt2" />

    <Button
        android:id="@+id/bt8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="presdig"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@+id/bt7"
        app:layout_constraintStart_toStartOf="@+id/bt5"
        app:layout_constraintTop_toTopOf="@+id/bt7"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="presdig"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt1"
        app:layout_constraintStart_toStartOf="@+id/btp" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:onClick="presdig"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/bt0"
        app:layout_constraintStart_toStartOf="@+id/bt4" />

    <Button
        android:id="@+id/btmul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clicop"
        android:text="X"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt3"
        app:layout_constraintStart_toStartOf="@+id/btrest" />

    <Button
        android:id="@+id/btc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:text="C"
        app:layout_constraintBottom_toTopOf="@+id/btsum"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>